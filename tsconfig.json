{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/atoms": [
        "libs/atoms/src"
      ],
      "@app/atoms/*": [
        "libs/atoms/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}